<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/gradient"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Student "/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textd11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@color/black"

                android:text="Name: "/>

            <TextView
                android:id="@+id/textd12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text11"
                android:textColor="@color/black"

                android:layout_marginLeft="37dp"
                android:text="Feedback"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textd31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:orientation="horizontal"
                android:text="Id: "/>

            <TextView
                android:id="@+id/textd32"
                android:layout_width="wrap_content"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text11"
                android:layout_marginLeft="10dp"
                android:text="Feedback"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textd21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:orientation="horizontal"
                android:text="link: "/>

            <TextView
                android:id="@+id/textd22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text11"
                android:textColor="@color/black"

                android:layout_marginLeft="10dp"
                android:text="Feedback"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStudentDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/component35"
                android:textColor="@color/blue_pressed"

                android:text="Download" />

            <Button
                android:id="@+id/btnViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:background="@drawable/component35"
                android:textColor="@color/green_complete"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>