<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelf_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bookshelf_header_bg">

        <ImageView
            android:id="@+id/shelf_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selection"
            android:clickable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/shelf_image_title"
            android:layout_width="wrap_content"
            android:text="本地书籍"
            android:textSize="20sp"
            android:textColor="@color/fontColor"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_shelf"
        android:background="@drawable/bookshelf_shadow" />
</RelativeLayout>